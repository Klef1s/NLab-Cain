<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <SolidColorBrush x:Key="CheckBox.IsCheked" Color="#175FCC"/>

    <Style x:Key="CheckBox.Base" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="Background" Value="{StaticResource CheckBox.IsCheked}"/>
        <Setter Property="Height" Value="17"/>
        <Setter Property="materialDesign:CheckBoxAssist.CheckBoxSize" Value="22"/>
    </Style>

</ResourceDictionary>