<Page x:Class="NLab_Cain.Pages.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NLab_Cain.Pages"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      d:DesignHeight="668" d:DesignWidth="1155"
      Title="ChartPage">

    <StackPanel>
        <ScrollViewer Height="668" HorizontalAlignment="Center" Width="1155" VerticalAlignment="Bottom">
            <StackPanel>
            <TextBlock Text="Чарты дня: треки" 
                   Width="auto" Height="auto"
                   Foreground="White" 
                   FontSize="22" FontFamily="Montserrat" FontWeight="SemiBold"  
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="20,0,0,0"/>
            <WrapPanel Width="890" Margin="20,20,0,20" Height="auto" HorizontalAlignment="Left" ScrollViewer.CanContentScroll="False">
                <Button Style="{StaticResource Button.Chart}"
                        Name="allWorld" Click="allWorld_Click">
                    <Border Background="#FF2D2D2D" Padding="14" CornerRadius="10">
                        <StackPanel Orientation="Vertical" Height="auto" VerticalAlignment="Top" >
                            <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_global_large.jpg"
                                   Stretch="Fill">
                                <Image.Effect>
                                    <DropShadowEffect Color="#FF525252" ShadowDepth="2" BlurRadius="20" Direction="275" RenderingBias="Quality"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock Text="Топ 50 (во всем мире)" FontSize="14" FontWeight="SemiBold" FontFamily="Montserrat" Foreground="White" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    <!--Весь мир-->
                </Button>
                <Button Margin="30,0,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="australia" Click="australia_Click" Cursor="Arrow">
                    <Border Background="#FF2D2D2D" Padding="14" CornerRadius="10">
                        <StackPanel Orientation="Vertical" Height="auto" VerticalAlignment="Top" >
                            <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_au_large.jpg" 
                                   Stretch="Fill">
                                <Image.Effect>
                                    <DropShadowEffect Color="#FF525252" ShadowDepth="2" BlurRadius="20" Direction="275" RenderingBias="Quality"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock Text="Топ 50 (во всем мире)" FontSize="14" FontWeight="SemiBold" FontFamily="Montserrat" Foreground="White" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    <!--Австралия-->
                </Button>
                <Button Margin="30,0,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="austria" Click="austria_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_at_large.jpg" 
                           Stretch="Fill"/>
                    <!--Австрия-->
                </Button>
                <Button Margin="30,0,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="argentina" Click="argentina_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_ar_large.jpg" 
                           Stretch="Fill"/>
                    <!--Аргентина-->
                </Button>
                <Button Margin="0,24,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="belarus" Click="belarus_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_by_large.jpg" 
                           Stretch="Fill"/>
                    <!--Беларусь-->
                </Button>
                <Button Margin="30,24,0,0" 
                        Style="{StaticResource Button.Chart}"
                        Name="belgium" Click="belgium_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_be_large.jpg" 
                           Stretch="Fill"/>
                    <!--Бельгия-->
                </Button>
                <Button Margin="30,24,0,0" 
                        Style="{StaticResource Button.Chart}"
                        Name="bulgaria" Click="bulgaria_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_bg_large.jpg" 
                           Stretch="Fill"/>
                    <!--Болгария-->
                </Button>
                <Button Margin="30,24,0,0" 
                        Style="{StaticResource Button.Chart}" 
                        Name="brazil" Click="brazil_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_br_large.jpg" 
                           Stretch="Fill"/>
                    <!--Бразилия-->
                </Button>
                <Button Margin="0,24,0,0" 
                        Style="{StaticResource Button.Chart}"
                        Name="uk" Click="uk_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_gb_large.jpg" 
                           Stretch="Fill"/>
                    <!--Великобритания-->
                </Button>
                <Button Margin="30,24,0,0" 
                        Style="{StaticResource Button.Chart}"
                        Name="hungary" Click="hungary_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_hu_large.jpg" 
                           Stretch="Fill"/>
