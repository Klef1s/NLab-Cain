                </Button>
                <Button Margin="0,24,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="hongKong" Click="hongKong_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_hk_large.jpg" 
                           Stretch="Fill"/>
                    <!--Гонконг-->
                </Button>
                <Button Margin="30,24,0,0" 
                        Style="{StaticResource Button.Chart}"
                        Name="greece" Click="greece_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_gr_large.jpg" 
                           Stretch="Fill"/>
                    <!--Греция-->
                </Button>
                <Button Margin="30,24,0,0" 
                        Style="{StaticResource Button.Chart}"
                        Name="dominicana" Click="dominicana_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_dk_large.jpg" 
                           Stretch="Fill"/>
                    <!--Доминикана-->
                </Button>
                <Button Margin="30,24,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="egypt" Click="egypt_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_eg_large.jpg" 
                           Stretch="Fill"/>
                    <!--Египет-->
                </Button>
                <Button Margin="0,24,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="israel" Click="israel_Click">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_il_large.jpg" 
                           Stretch="Fill"/>
                    <!--Израиль-->
                </Button>
                <Button Margin="30,24,0,0"
                        Style="{StaticResource Button.Chart}"
