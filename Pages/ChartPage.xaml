                </Button>
                <Button Margin="30,24,0,0"
                        Style="{StaticResource Button.Chart}"
                        Name="portugal" Click="portugal_Click" Cursor="Arrow">
                    <Image Source="https://charts-images.scdn.co/assets/locale_en/regional/daily/region_pt_large.jpg" 
                           Stretch="Fill"/>
                    <!--Португалия-->
                </Button>
            </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Page>
